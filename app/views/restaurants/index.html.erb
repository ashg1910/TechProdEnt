<% if user_signed_in? %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: "btn btn-large btn-primary" %>
<% else %>
<%= link_to "Sign In", new_user_session_path, class: "btn btn-large btn-primary" %>
<%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
<% end %>
<h1>Listing Restaurants</h1>


<%= form_tag restaurants_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search by city", :name => nil %>
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th>Category</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Rating</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= restaurant.longitude %></td>
        <td><%= restaurant.city %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if admin_signed_in? %>
<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-large btn-primary" %> | 
<%= link_to 'Admin Logout', destroy_admin_session_path, :method => :delete, class: "btn btn-large btn-primary" %>
<% else %>
<%= link_to 'Admin Signin', new_admin_session_path, class: "btn btn-large btn-primary" %>
<% end %>
